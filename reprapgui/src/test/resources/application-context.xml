<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mockito="http://www.mockito.org/spring/mockito"
	xsi:schemaLocation="
	http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://www.springframework.org/schema/context 
	http://www.springframework.org/schema/context/spring-context-3.0.xsd
	http://www.mockito.org/spring/mockito 
	http://www.mockito.org/spring/mockito.xsd">

	<context:annotation-config />

	<bean id="MainApplication" class="com.reprap.reprapgui.view.frames.FabricatorWindow">
		<constructor-arg name="name" value="Main"></constructor-arg>
	</bean>
	
	<bean id="portPath" class="com.reprap.reprapgui.view.components.BasicJTextField">
		<property name="name" value="portpath"></property>
		<property name="columns" value="15"></property>
	</bean>
	
	<bean id="baudSpeed" class="com.reprap.reprapgui.view.components.BasicJTextField">
		<property name="name" value="baudspeed"></property>
		<property name="columns" value="15"></property>
	</bean>
	
	<mockito:spy beanName="printer" />
	<bean id="printer" class="com.reprap.reprapgui.controller.PrusaPrinter" />

</beans>
