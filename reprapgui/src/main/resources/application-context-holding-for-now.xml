<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mockito="http://www.mockito.org/spring/mockito" xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="
	http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://www.springframework.org/schema/context 
	http://www.springframework.org/schema/context/spring-context-3.0.xsd
	http://www.mockito.org/spring/mockito 
	http://www.mockito.org/spring/mockito.xsd
	http://www.springframework.org/schema/util
	http://www.springframework.org/schema/util/spring-util-3.0.xsd">

	<context:annotation-config />
	<context:component-scan base-package="com.reprap.reprapgui.controller" />

	<bean id="MainApplication" class="com.reprap.reprapgui.view.frames.FabricatorWindow">
		<constructor-arg index="0" name="name" value="Main"></constructor-arg>
		<constructor-arg index="1" name="panel" ref="printView"></constructor-arg>
		<constructor-arg index="2" name="axisPanel" ref="axisView"></constructor-arg>
	</bean>

	<mockito:spy beanName="printController" />
	<bean id="printController" class="com.reprap.reprapgui.controller.PrinterController">
		<property name="model" ref="printModel" />
		<property name="view" ref="printView" />
	</bean>

	<mockito:spy beanName="axisController" />
	<bean id="axisController" class="com.reprap.reprapgui.controller.AxisController">
	
	</bean>

	<bean id="printView" class="com.reprap.reprapgui.view.panels.FabricatorPrintPanel" init-method="initialise" />

	<bean id="axisView" class="com.reprap.reprapgui.view.panels.AxisViewPanel" init-method="initialise" />

	<bean id="printerConnectButton" class="com.reprap.reprapgui.view.buttons.PrinterConnectButton">
		<constructor-arg index="0">
			<util:constant
				static-field="com.reprap.reprapgui.controller.utils.StaticConstants.CONNECT_BUTTON" />
		</constructor-arg>
		<property name="name" value="Connect" />
		<property name="enabled" value="false" />
	</bean>

	<bean id="axisXUp" class="com.reprap.reprapgui.controller.utils.Axis"
		factory-method="valueOf" lazy-init="true">
		<constructor-arg>
			<value>XUp</value>
		</constructor-arg>
	</bean>

	<bean id="axisXDown" class="com.reprap.reprapgui.controller.utils.Axis"
		factory-method="valueOf">
		<constructor-arg>
			<value>XDown</value>
		</constructor-arg>
	</bean>

	<bean id="axisYUp" class="com.reprap.reprapgui.controller.utils.Axis"
		factory-method="valueOf">
		<constructor-arg>
			<value>YUp</value>
		</constructor-arg>
	</bean>

	<bean id="axisYDown" class="com.reprap.reprapgui.controller.utils.Axis"
		factory-method="valueOf">
		<constructor-arg>
			<value>YDown</value>
		</constructor-arg>
	</bean>

	<bean id="axisZUp" class="com.reprap.reprapgui.controller.utils.Axis"
		factory-method="valueOf">
		<constructor-arg>
			<value>ZUp</value>
		</constructor-arg>
	</bean>

	<bean id="axisZDown" class="com.reprap.reprapgui.controller.utils.Axis"
		factory-method="valueOf">
		<constructor-arg>
			<value>ZDown</value>
		</constructor-arg>
	</bean>

	<bean id="xup" class="com.reprap.reprapgui.view.buttons.AxisButton">
		<constructor-arg index="0" ref="axisXUp" />
	</bean>

	<bean id="xdown" class="com.reprap.reprapgui.view.buttons.AxisButton">
		<constructor-arg index="0" ref="axisXDown" />
	</bean>

	<bean id="yup" class="com.reprap.reprapgui.view.buttons.AxisButton">
		<constructor-arg index="0" ref="axisYUp" />
	</bean>

	<bean id="ydown" class="com.reprap.reprapgui.view.buttons.AxisButton">
		<constructor-arg index="0" ref="axisYDown" />
	</bean>

	<bean id="zup" class="com.reprap.reprapgui.view.buttons.AxisButton">
		<constructor-arg index="0" ref="axisZUp" />
	</bean>

	<bean id="zdown" class="com.reprap.reprapgui.view.buttons.AxisButton">
		<constructor-arg index="0" ref="axisZDown" />
	</bean>

	<bean id="portPath" class="com.reprap.reprapgui.view.components.StringTextField">
		<property name="name">
			<util:constant
				static-field="com.reprap.reprapgui.controller.utils.StaticConstants.PORT_TEXT_FIELD" />
		</property>
		<property name="columns" value="15" />
	</bean>

	<bean id="baudSpeed" class="com.reprap.reprapgui.view.components.IntegerTextField">
		<property name="name">
			<util:constant
				static-field="com.reprap.reprapgui.controller.utils.StaticConstants.BAUD_SPEED_TEXT_FIELD" />
		</property>
		<property name="columns" value="15" />
	</bean>

	<bean id="portLabel" class="javax.swing.JLabel">
		<property name="text">
			<util:constant
				static-field="com.reprap.reprapgui.controller.utils.StaticConstants.PORT_LABEL_TEXT" />
		</property>
	</bean>

	<bean id="baudSpeedLabel" class="javax.swing.JLabel">
		<property name="text">
			<util:constant
				static-field="com.reprap.reprapgui.controller.utils.StaticConstants.BAUD_SPEED_LABEL_TEXT" />
		</property>
	</bean>

	<bean id="connectionStateLabel" class="javax.swing.JLabel">
		<property name="text">
			<util:constant
				static-field="com.reprap.reprapgui.controller.utils.MessageConstants.STATE_DISCONNECTED" />
		</property>
		<property name="name">
			<util:constant
				static-field="com.reprap.reprapgui.controller.utils.StaticConstants.CONNECT_STATE_LABEL" />
		</property>
	</bean>

	
	<bean id="axisModel" class="com.reprap.reprapgui.model.AxisModel" />

</beans>
